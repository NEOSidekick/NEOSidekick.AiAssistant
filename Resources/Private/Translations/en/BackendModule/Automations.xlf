                <source>Request via email</source>
            </trans-unit>
            <trans-unit id="approvalProcess.requestViaSlack" xml:space="preserve">
                <source>Request via Slack</source>
            </trans-unit>
            <trans-unit id="imageAltText.title" xml:space="preserve">
                <source>Image Alt Text Automation</source>
            </trans-unit>
