                <source>Automatically correct texts and maintain brand integrity.</source>
            </trans-unit>
            <trans-unit id="imageAltText.generateEmptyAltTexts" xml:space="preserve">
                <source>Automatically generate empty alternative texts for images on publication</source>
            </trans-unit>
            <trans-unit id="imageAltText.generateEmptyTitleTexts" xml:space="preserve">
