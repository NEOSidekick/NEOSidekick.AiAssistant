            <trans-unit id="label" xml:space="preserve">
                <source>NEOSidekick Automations</source>
            </trans-unit>
            <trans-unit id="description" xml:space="preserve">
                <source>Configure AI-powered automations for your content.</source>
            </trans-unit>
            <trans-unit id="intro" xml:space="preserve">
                <source>Configure AI-powered automations for your content, by adding quality assurance features. All enabled automations will be executed after every publish to live and finish 1-2 minutes after the publish.</source>
            </trans-unit>
            <trans-unit id="currentlyEditing" xml:space="preserve">
