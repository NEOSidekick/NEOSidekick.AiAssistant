                <source>Re-determine existing focus keywords on publication</source>
            </trans-unit>
            <trans-unit id="seoAutomations.generateEmptySeoTitles" xml:space="preserve">
                <source>Automatically create SEO titles on publication when empty </source>
            </trans-unit>
            <trans-unit id="seoAutomations.generateEmptyMetaDescriptions" xml:space="preserve">
                <source>Automatically create meta descriptions on publication when empty </source>
            </trans-unit>
            <trans-unit id="seoAutomations.regenerateExistingSeoTitles" xml:space="preserve">
                <source>Automatically regenerate existing SEO titles on publication</source>
            </trans-unit>
            <trans-unit id="seoAutomations.regenerateExistingMetaDescriptions" xml:space="preserve">
                <source>Automatically regenerate existing meta descriptions on publication</source>
