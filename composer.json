{
    "name": "neosidekick/ai-assistant",
    "description": "Use the power of GPT-4 to assist you in writing content",
    "type": "neos-plugin",
    "license": "GPL-3.0-or-later",
    "keywords": [
        "flow",
        "neos",
        "openai",
        "gpt",
        "gpt-4",
        "chatgpt",
        "ai",
        "writing"
    ],
    "require": {
        "php": "^8.0",
        "neos/neos": "~7.0 || ~8.0 || dev-master",
        "neos/media": "~7.0 || ~8.0 || dev-master",
        "neos/neos-ui": "~7.0 || ~8.0 || dev-master",
        "sitegeist/fusionlinkprototypes": "v1.0.1",
        "neos/seo": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9",
        "mockery/mockery": "@stable",
        "mikey179/vfsstream": "@stable",
        "fakerphp/faker": "^1.23.0"
    },
    "authors": [
        {
            "name": "Roland Sch√ºtz",
            "email": "rs@codeq.at",
            "homepage": "https://neosidekick.com/",
            "role": "Developer"
        }
    ],
    "archive": {
        "exclude": [
            ".editorconfig",
            ".gitattributes",
            ".github",
            ".gitignore"
        ]
    },
    "autoload": {
        "psr-4": {
            "NEOSidekick\\AiAssistant\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NEOSidekick\\AiAssistant\\Tests\\": "Tests"
        }
    },
    "extra": {
        "neos": {
            "package-key": "NEOSidekick.AiAssistant"
        },
        "applied-flow-migrations": []
    },
    "suggest": {
        "webandco/neos-asset-usage-cache": "To improve performance of the image alt-text generator when using the 'only-in-usage' filter"
    },
    "config": {
        "bin-dir": "bin",
        "vendor-dir": "Packages/Libraries",
        "allow-plugins": {
            "neos/composer-plugin": true,
            "php-http/discovery": false
        }
    },
    "scripts": {
        "fix:style": "phpcbf --colors --standard=PSR12 Classes",
        "fix": [
            "@fix:style"
        ],
        "test:style": "phpcs --colors -n --standard=PSR12 Classes",
        "test:stan": "phpstan -v analyse Classes",
        "test:unit": "bin/phpunit --bootstrap Tests/UnitTestBootstrap.php --configuration Tests/UnitTests.xml",
        "test:functional": "bin/phpunit --bootstrap Tests/FunctionalTestBootstrap.php --configuration Tests/FunctionalTests.xml",
        "cc": "phpstan clear cache",
        "test": [
            "@test:style",
            "@test:stan",
            "@test:unit"
        ]
    }
}
